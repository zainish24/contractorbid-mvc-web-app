@{
    ViewData["Title"] = "Contractor Bidding Platform";
}

<!-- Hero Start -->
<div class="container-fluid pb-5 hero-header bg-light mb-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center mb-5">
            <div class="col-lg-6">
                <h1 class="display-1 mb-4 animated slideInRight">Professional <span class="text-primary">Contractor</span> Platform</h1>
                <h5 class="d-inline-block border border-2 border-white py-3 px-5 mb-0 animated slideInRight">
                    Smart Bidding System for Construction Professionals
                </h5>

                <div class="mt-4">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Register", "Auth")" class="btn btn-primary btn-lg me-3">Get Started</a>
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-primary btn-lg">Contractor Login</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary btn-lg me-3">Go to Dashboard</a>
                        <a href="@Url.Action("Index", "Jobs")" class="btn btn-outline-primary btn-lg">View Jobs</a>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="owl-carousel header-carousel animated fadeIn">
                    <img class="img-fluid rounded" src="~/img/hero-slider-1.jpg" alt="Construction Project">
                    <img class="img-fluid rounded" src="~/img/hero-slider-2.jpg" alt="Professional Contractor">
                    <img class="img-fluid rounded" src="~/img/hero-slider-3.jpg" alt="Building Design">
                </div>
            </div>
        </div>
        <div class="row g-5 animated fadeIn">
            <div class="col-md-6 col-lg-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 btn-square border border-2 border-white me-3">
                        <i class="fa fa-calculator text-primary"></i>
                    </div>
                    <h5 class="lh-base mb-0">Smart Bid Calculations</h5>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 btn-square border border-2 border-white me-3">
                        <i class="fa fa-chart-line text-primary"></i>
                    </div>
                    <h5 class="lh-base mb-0">Real-time Analytics</h5>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 btn-square border border-2 border-white me-3">
                        <i class="fa fa-shield-alt text-primary"></i>
                    </div>
                    <h5 class="lh-base mb-0">Secure Platform</h5>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 btn-square border border-2 border-white me-3">
                        <i class="fa fa-briefcase text-primary"></i>
                    </div>
                    <h5 class="lh-base mb-0">Project Management</h5>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Features Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center wow fadeIn" data-wow-delay="0.1s">
            <h1 class="mb-5">Why Contractors <span class="text-uppercase text-primary bg-light px-2">Choose Us</span></h1>
        </div>
        <div class="row g-5 align-items-center text-center">
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                <i class="fa fa-robot fa-5x text-primary mb-4"></i>
                <h4>AI-Powered Bidding</h4>
                <p class="mb-0">Advanced algorithms help you calculate competitive bids based on your specific cost structure and market rates.</p>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                <i class="fa fa-chart-bar fa-5x text-primary mb-4"></i>
                <h4>Profit Optimization</h4>
                <p class="mb-0">Maximize your profit margins while remaining competitive in the market with our smart pricing suggestions.</p>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.5s">
                <i class="fa fa-tachometer-alt fa-5x text-primary mb-4"></i>
                <h4>Time Saving</h4>
                <p class="mb-0">Automate your bidding process and focus on what you do best - delivering quality construction work.</p>
            </div>
        </div>
    </div>
</div>
<!-- Features End -->