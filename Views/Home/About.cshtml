@{
    ViewData["Title"] = "About ContractorBid";
}

<!-- About Header -->
<div class="container-fluid py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-6 mb-3">About <span class="text-primary">ContractorBid</span></h1>
                <p class="mb-0">Revolutionizing the way contractors bid on projects with smart technology and transparent processes.</p>
            </div>
        </div>
    </div>
</div>

<!-- About Content -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-6 wow fadeIn" data-wow-delay="0.1s">
                        <img class="img-fluid rounded" src="~/img/about-1.jpg" alt="Construction Team">
                    </div>
                    <div class="col-6 wow fadeIn" data-wow-delay="0.3s">
                        <img class="img-fluid h-75 rounded" src="~/img/about-2.jpg" alt="Project Site">
                        <div class="h-25 d-flex align-items-center text-center bg-primary px-4 rounded">
                            <h4 class="text-white lh-base mb-0">Smart Bidding Since 2024</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="mb-5"><span class="text-uppercase text-primary bg-light px-2">Our Mission</span></h1>
                <p class="mb-4">ContractorBid was created to bridge the gap between construction professionals and project opportunities. We believe in empowering contractors with data-driven insights and streamlined bidding processes.</p>
                <p class="mb-5">Our platform leverages advanced algorithms to help contractors calculate competitive bids while maintaining healthy profit margins. We're committed to transparency, fairness, and success for all parties involved.</p>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>Data-Driven Bidding</h6>
                        <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Transparent Process</h6>
                    </div>
                    <div class="col-sm-6">
                        <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>24/7 Platform Access</h6>
                        <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Fair Competition</h6>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-5">
                    <a class="btn btn-primary px-4 me-2" href="@Url.Action("Contact", "Home")">Get In Touch</a>
                    <a class="btn btn-outline-primary btn-square border-2 me-2" href="#!"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-outline-primary btn-square border-2 me-2" href="#!"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-outline-primary btn-square border-2 me-2" href="#!"><i class="fab fa-instagram"></i></a>
                    <a class="btn btn-outline-primary btn-square border-2" href="#!"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center wow fadeIn" data-wow-delay="0.1s">
            <h1 class="mb-5">Why Contractors <span class="text-uppercase text-primary bg-light px-2">Love Us</span></h1>
        </div>
        <div class="row g-5 align-items-center text-center">
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                <i class="fa fa-robot fa-5x text-primary mb-4"></i>
                <h4>AI-Powered Calculations</h4>
                <p class="mb-0">Our advanced algorithms analyze project requirements and your cost structure to suggest optimal bid amounts.</p>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                <i class="fa fa-chart-line fa-5x text-primary mb-4"></i>
                <h4>Profit Optimization</h4>
                <p class="mb-0">Maximize your earnings while remaining competitive in the market with our smart pricing guidance.</p>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.5s">
                <i class="fa fa-clock fa-5x text-primary mb-4"></i>
                <h4>Time Saving</h4>
                <p class="mb-0">Reduce bidding time by up to 70% with our automated calculations and streamlined submission process.</p>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                <i class="fa fa-shield-alt fa-5x text-primary mb-4"></i>
                <h4>Secure Platform</h4>
                <p class="mb-0">Your data and bidding strategies are protected with enterprise-grade security measures.</p>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                <i class="fa fa-mobile-alt fa-5x text-primary mb-4"></i>
                <h4>Mobile Friendly</h4>
                <p class="mb-0">Access your dashboard and submit bids from anywhere, on any device.</p>
            </div>
            <div class="col-md-6 col-lg-4 wow fadeIn" data-wow-delay="0.5s">
                <i class="fa fa-users fa-5x text-primary mb-4"></i>
                <h4>Growing Community</h4>
                <p class="mb-0">Join thousands of contractors who trust our platform for their bidding needs.</p>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="container-fluid bg-primary py-5">
    <div class="container">
        <div class="row g-4 text-center text-white">
            <div class="col-md-3 wow fadeIn" data-wow-delay="0.1s">
                <h1 class="display-4 mb-0" data-toggle="counter-up">1250</h1>
                <p class="mb-0">Active Contractors</p>
            </div>
            <div class="col-md-3 wow fadeIn" data-wow-delay="0.3s">
                <h1 class="display-4 mb-0" data-toggle="counter-up">5430</h1>
                <p class="mb-0">Projects Completed</p>
            </div>
            <div class="col-md-3 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="display-4 mb-0" data-toggle="counter-up">12.5M</h1>
                <p class="mb-0">Total Bid Value</p>
            </div>
            <div class="col-md-3 wow fadeIn" data-wow-delay="0.7s">
                <h1 class="display-4 mb-0" data-toggle="counter-up">98</h1>
                <p class="mb-0">Success Rate %</p>
            </div>
        </div>
    </div>
</div>