@model List<ContractorDashboard.Models.Job>
@{
    ViewData["Title"] = "Manage Jobs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">Manage <span class="text-primary">Jobs</span></h1>
                    <p class="text-muted mb-0">Manage all construction jobs and projects</p>
                </div>
                <a href="@Url.Action("AddJob", "Admin")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Job
                </a>
            </div>
        </div>
    </div>

    <!-- Jobs Table -->
    <div class="row">
        <div class="col-12">
            <div class="card wow fadeIn" data-wow-delay="0.1s">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">All Jobs (@Model.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Title</th>
                                        <th>Location</th>
                                        <th>Type</th>
                                        <th>Budget</th>
                                        <th>Status</th>
                                        <th>Posted Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var job in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@job.Title</strong>
                                                <br>
                                                <small class="text-muted">@(job.Description.Length > 50 ? job.Description.Substring(0, 50) + "..." : job.Description)</small>
                                            </td>
                                            <td>@job.Location</td>
                                            <td>
                                                <span class="badge bg-info">@job.JobType</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">@job.BudgetRange</strong>
                                            </td>
                                            <td>
                                                <span class="badge @(job.Status == "Active" ? "bg-success" : "bg-secondary")">@job.Status</span>
                                            </td>
                                            <td>@job.PostedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("EditJob", "Admin", new { id = job.Id })"
                                                       class="btn btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" action="@Url.Action("DeleteJob", "Admin", new { id = job.Id })"
                                                          class="d-inline" onsubmit="return confirm('Are you sure you want to delete this job?');">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-briefcase fa-4x text-muted mb-4"></i>
                            <h4>No Jobs Available</h4>
                            <p class="text-muted mb-4">Get started by adding your first job posting.</p>
                            <a href="@Url.Action("AddJob", "Admin")" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>Add First Job
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>