@model ContractorDashboard.Models.Job
@{
    ViewData["Title"] = "Add New Job";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">Add <span class="text-primary">New Job</span></h1>
                    <p class="text-muted mb-0">Create a new job posting for contractors</p>
                </div>
                <a href="@Url.Action("Jobs", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Jobs
                </a>
            </div>
        </div>
    </div>

    <!-- Job Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card wow fadeIn" data-wow-delay="0.1s">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-plus-circle me-2"></i>Job Details</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("AddJob", "Admin")">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Title" class="form-label">Job Title *</label>
                                <input type="text" class="form-control" id="Title" name="Title" required
                                       placeholder="e.g., Office Building Renovation">
                                <div class="form-text">Enter a clear and descriptive job title</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="JobType" class="form-label">Job Type *</label>
                                <select class="form-control" id="JobType" name="JobType" required>
                                    <option value="">Select Job Type</option>
                                    <option value="Construction">Construction</option>
                                    <option value="Renovation">Renovation</option>
                                    <option value="Repair">Repair & Maintenance</option>
                                    <option value="Demolition">Demolition</option>
                                    <option value="Landscaping">Landscaping</option>
                                    <option value="Electrical">Electrical</option>
                                    <option value="Plumbing">Plumbing</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">Job Description *</label>
                            <textarea class="form-control" id="Description" name="Description" rows="5" required
                                      placeholder="Describe the project scope, requirements, and specifications in detail..."></textarea>
                            <div class="form-text">Provide detailed information about the project</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Location" class="form-label">Location *</label>
                                <input type="text" class="form-control" id="Location" name="Location" required
                                       placeholder="e.g., Downtown, New York">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="BudgetRange" class="form-label">Budget Range *</label>
                                <input type="text" class="form-control" id="BudgetRange" name="BudgetRange" required
                                       placeholder="e.g., $50,000 - $75,000">
                                <div class="form-text">Provide a realistic budget range</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="EstimatedHours" class="form-label">Estimated Hours</label>
                                <input type="number" class="form-control" id="EstimatedHours" name="EstimatedHours"
                                       placeholder="e.g., 200" min="1">
                                <div class="form-text">Approximate hours required</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="Deadline" class="form-label">Project Deadline</label>
                                <input type="date" class="form-control" id="Deadline" name="Deadline">
                                <div class="form-text">Expected completion date</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="RequiredMaterials" class="form-label">Required Materials & Specifications</label>
                            <textarea class="form-control" id="RequiredMaterials" name="RequiredMaterials" rows="3"
                                      placeholder="List any specific materials, equipment, or special requirements..."></textarea>
                            <div class="form-text">Optional: Specify any special requirements</div>
                        </div>

                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Create Job
                            </button>
                            <a href="@Url.Action("Jobs", "Admin")" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>