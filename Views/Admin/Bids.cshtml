@model List<ContractorDashboard.Models.Bid>
@{
    ViewData["Title"] = "Bids Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">All <span class="text-primary">Bids</span></h1>
                    <p class="text-muted mb-0">Review and manage contractor bids</p>
                </div>
                <div class="text-muted">
                    <i class="fas fa-paper-plane me-2"></i>@Model.Count Total Bids
                </div>
            </div>
        </div>
    </div>

    <!-- AntiForgery Token -->
    <form id="antiForgeryForm" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Count(b => b.Status == "Submitted")</h4>
                            <p class="mb-0">Pending Bids</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Count(b => b.Status == "Accepted")</h4>
                            <p class="mb-0">Accepted Bids</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Count(b => b.Status == "UnderReview")</h4>
                            <p class="mb-0">Under Review</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-search fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.Count(b => b.Status == "Rejected")</h4>
                            <p class="mb-0">Rejected Bids</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bids Table -->
    <div class="row">
        <div class="col-12">
            <div class="card wow fadeIn" data-wow-delay="0.1s">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Bid Submissions</h5>
                    <div class="dropdown">
                        <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-filter me-1"></i>Filter Status
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item filter-status" data-status="all" href="#">All Bids</a></li>
                            <li><a class="dropdown-item filter-status" data-status="Submitted" href="#">Pending</a></li>
                            <li><a class="dropdown-item filter-status" data-status="UnderReview" href="#">Under Review</a></li>
                            <li><a class="dropdown-item filter-status" data-status="Accepted" href="#">Accepted</a></li>
                            <li><a class="dropdown-item filter-status" data-status="Rejected" href="#">Rejected</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="bidsTable">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Contractor</th>
                                        <th>Job</th>
                                        <th>Bid Amount</th>
                                        <th>Status</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bid in Model)
                                    {
                                        <tr class="bid-row" data-status="@bid.Status">
                                            <td>
                                                <strong>@bid.Contractor?.CompanyName</strong>
                                                <br>
                                                <small class="text-muted">@bid.Contractor?.Email</small>
                                            </td>
                                            <td>
                                                <strong>@bid.Job?.Title</strong>
                                                <br>
                                                <small class="text-muted">@bid.Job?.Location</small>
                                            </td>
                                            <td>
                                                <strong class="text-success">$@bid.BidAmount.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = bid.Status switch
                                                    {
                                                        "Submitted" => "bg-warning",
                                                        "UnderReview" => "bg-info",
                                                        "Accepted" => "bg-success",
                                                        "Rejected" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@bid.Status</span>
                                            </td>
                                            <td>@bid.SubmittedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary btn-view-details"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#bidDetailsModal"
                                                            data-bid-id="@bid.Id"
                                                            data-contractor="@bid.Contractor?.CompanyName"
                                                            data-contractor-email="@bid.Contractor?.Email"
                                                            data-job="@bid.Job?.Title"
                                                            data-job-location="@bid.Job?.Location"
                                                            data-job-budget="@bid.Job?.BudgetRange"
                                                            data-amount="$@bid.BidAmount.ToString("N2")"
                                                            data-status="@bid.Status"
                                                            data-notes="@bid.Notes"
                                                            data-date="@bid.SubmittedDate.ToString("MMMM dd, yyyy")">
                                                        <i class="fas fa-eye"></i>
                                                    </button>

                                                    @if (bid.Status == "Submitted" || bid.Status == "UnderReview")
                                                    {
                                                        <button class="btn btn-success btn-accept-bid"
                                                                data-bid-id="@bid.Id"
                                                                data-contractor="@bid.Contractor?.CompanyName"
                                                                data-job="@bid.Job?.Title">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button class="btn btn-danger btn-reject-bid"
                                                                data-bid-id="@bid.Id">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }

                                                    <div class="dropdown">
                                                        <button class="btn btn-outline-secondary dropdown-toggle"
                                                                type="button" data-bs-toggle="dropdown">
                                                            <i class="fas fa-cog"></i>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <a class="dropdown-item update-status"
                                                                   data-bid-id="@bid.Id"
                                                                   data-status="UnderReview">
                                                                    <i class="fas fa-search me-2"></i>Mark Under Review
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item update-status"
                                                                   data-bid-id="@bid.Id"
                                                                   data-status="Submitted">
                                                                    <i class="fas fa-clock me-2"></i>Mark as Pending
                                                                </a>
                                                            </li>
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li>
                                                                <a class="dropdown-item text-danger"
                                                                   href="#"
                                                                   onclick="confirmDelete(@bid.Id)">
                                                                    <i class="fas fa-trash me-2"></i>Delete Bid
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-paper-plane fa-4x text-muted mb-4"></i>
                            <h4>No Bids Yet</h4>
                            <p class="text-muted mb-4">Bids will appear here once contractors start submitting proposals.</p>
                            <a href="@Url.Action("Jobs", "Admin")" class="btn btn-primary">
                                <i class="fas fa-briefcase me-2"></i>Manage Jobs
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bid Details Modal -->
<div class="modal fade" id="bidDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Bid Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="border-bottom pb-2">Contractor Information</h6>
                        <p><strong>Company:</strong> <span id="modal-contractor"></span></p>
                        <p><strong>Email:</strong> <span id="modal-contractor-email"></span></p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="border-bottom pb-2">Job Details</h6>
                        <p><strong>Project:</strong> <span id="modal-job"></span></p>
                        <p><strong>Location:</strong> <span id="modal-job-location"></span></p>
                        <p><strong>Budget Range:</strong> <span id="modal-job-budget"></span></p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <h6 class="border-bottom pb-2">Bid Information</h6>
                        <p><strong>Amount:</strong> <span id="modal-amount" class="text-success fw-bold fs-5"></span></p>
                        <p><strong>Status:</strong> <span id="modal-status"></span></p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="border-bottom pb-2">Timeline</h6>
                        <p><strong>Submitted:</strong> <span id="modal-date"></span></p>
                    </div>
                </div>
                <div class="mt-3">
                    <h6 class="border-bottom pb-2">Additional Notes</h6>
                    <p id="modal-notes" class="text-muted p-3 bg-light rounded"></p>
                </div>
            </div>
            <div class="modal-footer">
                <div id="modal-actions" class="me-auto">
                    <!-- Dynamic action buttons will be inserted here -->
                </div>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/JavaScript.js"></script>
}