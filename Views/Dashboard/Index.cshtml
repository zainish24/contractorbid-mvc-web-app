@model ContractorDashboard.Models.Contractor
@{
    ViewData["Title"] = "Contractor Dashboard";
}

<!-- Dashboard Header -->
<div class="container-fluid py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-6 mb-3">Welcome back, <span class="text-primary">@Model.CompanyName</span></h1>
                <p class="mb-0">Manage your bids, track projects, and optimize your bidding strategy.</p>
            </div>
            <div class="col-lg-4 text-end">
                <a href="@Url.Action("Index", "Jobs")" class="btn btn-primary btn-lg me-2">Find New Jobs</a>
                <a href="@Url.Action("Settings", "Dashboard")" class="btn btn-outline-primary btn-lg">Bid Settings</a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.1s">
                <div class="bg-primary text-center text-white p-4 rounded">
                    <i class="fa fa-paper-plane fa-3x mb-3"></i>
                    <h2 class="mb-0">@Model.Bids.Count</h2>
                    <p class="mb-0">Total Bids</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.3s">
                <div class="bg-success text-center text-white p-4 rounded">
                    <i class="fa fa-check-circle fa-3x mb-3"></i>
                    <h2 class="mb-0">@Model.Bids.Count(b => b.Status == "Accepted")</h2>
                    <p class="mb-0">Accepted Bids</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.5s">
                <div class="bg-warning text-center text-white p-4 rounded">
                    <i class="fa fa-clock fa-3x mb-3"></i>
                    <h2 class="mb-0">@Model.Bids.Count(b => b.Status == "UnderReview")</h2>
                    <p class="mb-0">Under Review</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.7s">
                <div class="bg-info text-center text-white p-4 rounded">
                    <i class="fa fa-chart-line fa-3x mb-3"></i>
                    <h2 class="mb-0">$@Model.Bids.Where(b => b.Status == "Accepted").Sum(b => b.BidAmount).ToString("N0")</h2>
                    <p class="mb-0">Total Revenue</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Bids & Quick Actions -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Recent Bids -->
            <div class="col-lg-8">
                <div class="wow fadeIn" data-wow-delay="0.1s">
                    <h3 class="mb-4">Recent Bids</h3>
                    @if (Model.Bids.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Job Title</th>
                                        <th>Bid Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bid in Model.Bids.OrderByDescending(b => b.SubmittedDate).Take(5))
                                    {
                                        <tr>
                                            <td>@(bid.Job?.Title ?? "N/A")</td>
                                            <td>$@bid.BidAmount.ToString("N2")</td>
                                            <td>
                                                <span class="badge
                                                    @(bid.Status == "Accepted" ? "bg-success" :
                                                      bid.Status == "UnderReview" ? "bg-warning" :
                                                      bid.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                                                    @bid.Status
                                                </span>
                                            </td>
                                            <td>@bid.SubmittedDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="@Url.Action("Index", "Jobs")" class="btn btn-outline-primary mt-3">View All Bids</a>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fa fa-inbox fa-4x text-muted mb-3"></i>
                            <h4>No Bids Yet</h4>
                            <p class="text-muted">Start by submitting your first bid on available jobs.</p>
                            <a href="@Url.Action("Index", "Jobs")" class="btn btn-primary">Find Jobs</a>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-lg-4">
                <div class="wow fadeIn" data-wow-delay="0.3s">
                    <h3 class="mb-4">Quick Actions</h3>
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index", "Jobs")" class="btn btn-primary btn-lg">
                            <i class="fa fa-search me-2"></i>Find New Jobs
                        </a>
                        <a href="@Url.Action("Settings", "Dashboard")" class="btn btn-outline-primary btn-lg">
                            <i class="fa fa-cog me-2"></i>Bid Settings
                        </a>
                        <a href="@Url.Action("Create", "Jobs")" class="btn btn-outline-primary btn-lg">
                            <i class="fa fa-plus me-2"></i>Create Job Alert
                        </a>
                    </div>

                    <!-- Current Settings -->
                    @if (Model.Settings != null)
                    {
                        <div class="mt-5">
                            <h5 class="mb-3">Current Bid Settings</h5>
                            <div class="bg-light p-4 rounded">
                                <p><strong>Labor Rate:</strong> $@Model.Settings.LaborRate/hour</p>
                                <p><strong>Material Margin:</strong> @Model.Settings.MaterialMargin%</p>
                                <p><strong>Travel Cost:</strong> $@Model.Settings.TravelCost</p>
                                <a href="@Url.Action("Settings", "Dashboard")" class="btn btn-sm btn-primary">Update Settings</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>